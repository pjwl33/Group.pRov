body {
  background-image: url('<%= asset_path('purty_wood.png') %>');
  background-attachment: fixed;
  font-family: 'Nunito', sans-serif;
  color: #333;
}

h1, h2, h3, {
  color: #8C001A;
}

h2 { margin-bottom: 5px;}

.clear { clear:both; }
.center { text-align: center; }
.left_col { width: 680px; float: left; }
.right_col { width: 250px; float: right; }
.right { float: right; }
.left { float: left; }
i { width: 20px; color: #F6FA9C; margin-left: 5px;}
.wrap { width: 980px; margin: 0 auto; padding-top: 90px; display: table; }
a { text-decoration: none; color: #8C001A; }
.footer { position: fixed;}
input { height: 22px; }
hr { color: #333}

.fixed_header {
  width: 100%;
  height: 60px;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(140, 0, 26, 0.6);
  z-index: 2;
  .header_content {
    width: 980px;
    margin: 0 auto;
    .logo {
      float: left;
      background-image: url('<%= asset_path('headphones.png') %>');
      background-repeat: no-repeat;
      background-size: 40px 40px;
      background-position: left center;
      h1 {
        margin: 0;
        padding-left: 50px;
        line-height: 60px;
        font-size: 26px;
      }
    }
    .nav {
      margin: 0;
      float: right;
      li {
        display: inline;
        line-height: 60px;
        margin-left: 10px;
      }
    }
    a {
      color: #F6FA9C;
    }
  }
}

.button {
  background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #8c001a), color-stop(1, #a63d05) );
  background:-moz-linear-gradient( center top, #8c001a 5%, #a63d05 100% );
  filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#8c001a', endColorstr='#a63d05');
  background-color:#8c001a;
  -webkit-border-top-left-radius:20px;
  -moz-border-radius-topleft:20px;
  border-top-left-radius:20px;
  -webkit-border-top-right-radius:20px;
  -moz-border-radius-topright:20px;
  border-top-right-radius:20px;
  -webkit-border-bottom-right-radius:20px;
  -moz-border-radius-bottomright:20px;
  border-bottom-right-radius:20px;
  -webkit-border-bottom-left-radius:20px;
  -moz-border-radius-bottomleft:20px;
  border-bottom-left-radius:20px;
  text-indent:0;
  border: none;
  display:inline-block;
  color:#f5fa9c;
  font-family:Verdana;
  font-size:12px;
  font-weight:bold;
  font-style:normal;
  height:36px;
  line-height:36px;
  width:100px;
  text-decoration:none;
  text-align:center;
  margin: 5px;
}
.button:hover {
  background:-webkit-gradient( linear, left top, left bottom, color-stop(0.05, #a63d05), color-stop(1, #8c001a) );
  background:-moz-linear-gradient( center top, #a63d05 5%, #8c001a 100% );
  filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='#a63d05', endColorstr='#8c001a');
  background-color:#a63d05;
}.button:active {
  position:relative;
  top:1px;
}
